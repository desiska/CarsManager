@model DI_Praktika.Models.Query.QueryCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Query" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CarID" class="control-label"></label>
                <select asp-for="CarID" class="form-control">
                    @foreach (var item in Model.Cars)
                    {
                        <option value="@item.ID">@item.ToString()</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    @foreach (var item in Model.StatusObject)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
            <div hidden>
                <label asp-for="User" class="control-label"></label>
                <input asp-for="User" value="@User.Identity.Name" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            @if (!Model.IsFirstTime)
            {
                <div class="alert">
                    <p>@Model.Message</p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back</a>
</div>